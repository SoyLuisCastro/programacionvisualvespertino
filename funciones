return html();
function tablamultiplicar($numero){
    $cadena =0;
    $cadena .="<h1> la pabla de multiplicar del $numero <h1/>";
    for($i = 0; $i<=10;$i++){
      $cadena.="el resultado de ".$i." *" .$numero. "= ".$numero*$i."<br>";  
      
    }
    return $cadena;
}
tablamultiplicar (5);
